<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterRSREM.SignInPage">
    <Grid BackgroundColor="BlueViolet">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <Label Text=" Welcome to RSREM (Rajakumar Son's Product) " 
           HorizontalOptions="CenterAndExpand"
           VerticalOptions="CenterAndExpand" TextColor="White" Grid.Row="0" />

        <Image Grid.Row="1" Aspect="AspectFit"  Source="RSREM_Logo.jpg"></Image>

        <Button StyleClass="Link" Grid.Row="2"  Text="Sign Up" VerticalOptions="Center" TextColor="White" BackgroundColor="BlueViolet" Clicked="SignUpClickedAsync"></Button>
        

        <StackLayout Padding="25" Orientation="Horizontal" Grid.Row="3">
            <Label Text="I already have an account." TextColor="White" HorizontalOptions="Start" Margin="0,0,0,25" />
            <Button StyleClass="Link"  Text="Sign In" Margin="-8,-14" VerticalOptions="Start" TextColor="White" BackgroundColor="BlueViolet" Clicked="SignInClickedAsync"></Button>
            
        </StackLayout>

    </Grid>
  
</ContentPage>