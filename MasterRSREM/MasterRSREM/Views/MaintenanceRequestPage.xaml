<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterRSREM.Views.MaintenanceRequestPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="CategoryPicker" Margin="20,0,20,0" FontSize="Small" Title="Select Category" TextColor="DarkSlateGray" ItemsSource="{Binding Categories}" ItemDisplayBinding="{Binding Name}" SelectedIndex="0" SelectedIndexChanged="CategoryPicker_SelectedIndexChanged" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>